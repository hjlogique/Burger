<!-- index.handlebars-->

<main class="container">
    <div class="d-flex justify-content-center">
        <img src="/assets/img/burger.png" alt="Burger image" id="burger-logo">
    </div>

    <h1>Eat Da Burger Menu</h1><br>
    <div class="row d-flex">
        <div class="col">
            <h3>Burgers List</h3>
            <ul>
                {{#each burger}}
                {{#unless devoured}}
                <li>
                    <button class="burgerBtn btn btn-outline-warning" id="{{id}}">Devour It</button>
                    {{burger_name}}
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col">
            <h3>Devoured Burgers</h3>
            <ul>
                {{#each burger}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div><br>
        <h4 id="submitBurgerTitle">Add A Burger</h4>
        <form class="create-form">

            <div class="form-inline">
                <input type="text" class="form-control" id="burger" name="name" placeholder="Burger Name">
           

            <button type="submit" class="btn btn-primary" id="submitBtn">Submit</button>
             </div>
        </form>
    </div>
</main>